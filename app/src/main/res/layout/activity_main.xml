<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#424242">

    <!-- Pavadinimas ir antraštė -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MPPS"
        android:textColor="#FFAB91"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maisto produktų pristatymo sistema"
        android:textColor="#FFAB91"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <!-- El. pašto įvesties laukas -->
    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="El. pašto adresas"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_email"
        android:padding="12dp"
        android:background="@drawable/rounded_input"
        android:textColor="#FFFFFF"
        android:textColorHint="#9E9E9E"
        android:layout_marginBottom="12dp" />

    <!-- Slaptažodžio įvesties laukas -->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Slaptažodis"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_lock"
        android:padding="12dp"
        android:background="@drawable/rounded_input"
        android:textColor="#FFFFFF"
        android:textColorHint="#9E9E9E"
        android:layout_marginBottom="24dp" />

    <!-- Prisijungimo mygtukas -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prisijungti"
        android:backgroundTint="#FFAB91"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Arba tekstas -->
    <TextView
        android:id="@+id/orText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arba"
        android:textColor="#FFAB91"
        android:layout_marginBottom="16dp" />

    <!-- Registracijos mygtukas -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registruotis"
        android:backgroundTint="#FFAB91"
        android:textColor="#FFFFFF" />
</LinearLayout>

